(*$import *)

(* all of these tests apply to infixr as well. *)

(* should parse, as infix 0 x0 l *)

infix 0x0 l;

val op x0 = 0
fun f _ _ = 2
fun f x0 0 = 1
  | f x0 x = f 0 (x - 1)

val x = if (f x0 1) = 1 then print "WRONG"
                        else print "OK"

